@page
@model AspHtmxDemo.Pages.Demo.IndexModel

<h1>Hello, World!</h1>

<div id="YourNumber">
    <partial name="_YourNumber" />
</div>

<div>
    <button class="btn btn-primary my-2 col-12 col-md-6 col-xl-4 col-xxl-3"
            hx-get="@Url.Page("Index", "YourNumber")"
            hx-target="#YourNumber"
            hx-disabled-elt="this">
        <span class="spinner-border spinner-border-sm htmx-indicator" aria-hidden="true"></span>
        <span class="button-text">Get your number</span>
    </button>
</div>

<div>
    <button class="btn btn-primary my-2 col-12 col-md-6 col-xl-4 col-xxl-3"
            hx-post="@Url.Page("Index", "NumberListItem")"
            hx-include="#YourNumber input"
            hx-target="#NumberList"
            hx-swap="beforeend"
            hx-disabled-elt="this">
        <span class="spinner-border spinner-border-sm htmx-indicator" aria-hidden="true"></span>
        <span class="button-text">Add this number to the list</span>
    </button>
</div>


<ul id="NumberList" class="list-group col-12 col-md-6 col-xl-4 col-xxl-3 text-center">

</ul>